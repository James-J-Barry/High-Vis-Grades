{
  "manifest_version": 3,
  "name": "GradescopePlus",
  "version": "1.0",
  "description": "Fetches and calculates course grades from Gradescope.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.gradescope.com/*"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": {
      "16": "lovestick.png",
      "48": "lovestick.png",
      "128": "lovestick.png"
    }
  }
}
